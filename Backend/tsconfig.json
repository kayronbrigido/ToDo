{
  "compilerOptions": {
     "types": ["reflect-metadata"],
     "lib": ["es6", "dom"],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "allowSyntheticDefaultImports": true,
     "composite": true,
     "baseUrl": ".",
     "paths": {
        "@src/*": ["./src/*"]
      },
  },
  "include": [
     "./src/**/*",
  ],
  "exclude": [
     "node_modules",
     "build"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}